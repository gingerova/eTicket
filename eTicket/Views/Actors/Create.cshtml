@model Actor

@{
    ViewData["Title"] = "Add a New Actor";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Actor</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" id="ProfilePicturePreview" style="max-width:250px; max-height:250px;"/>
                </div>
                <div class="form-group">
                    <label asp-for="ProfilePicture" class="control-label"></label>
                    <input asp-for="ProfilePicture" class="form-control" />
                    <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="ActorName" class="control-label"></label>
                    <input asp-for="ActorName" class="form-control" />
                    <span asp-validation-for="ActorName" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
                </div>
                   </form>

                </div>

        </div>

    </div>
</div>

@section Scripts{
<script>
$(document).ready(function() {
        output.src = $("#ProfilePicture").val();
})
$("#ProfilePicture").on("change", function() {
    var output = document.getElementById("ProfilePicturePreview");
    output.src = $(this).val();
})
</script>
}